doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title ROTTEN TOMATOES -Top 100 Movies
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css')
    link(rel='stylesheet', type='text/css', href='../stylesheets/bulma.css')
    link(rel='stylesheet', type='text/css', href='../stylesheets/landing.css')
  body
    section.hero.is-fullheight.is-dark
      .hero-head
        .container
          nav.nav
            .container
              .nav-left
                a.nav-item(href='/')
                  img(src='https://upload.wikimedia.org/wikipedia/en/thumb/6/6f/Rotten_Tomatoes_logo.svg/1280px-Rotten_Tomatoes_logo.svg.png', alt='Description')
              span.nav-toggle
                span
                span
                span
              .nav-right.nav-menu
              if (user) 
                span.nav-item
                  a.nav-item
                    | You are logged in as #{user.username}
                  a.button.is-default(href="/auth/logout")
                    | Logout
              else
                span.nav-item
                  a.button.is-default(href="/auth/login")
                    | Sign In
                span.nav-item
                  a.button(href="/auth/register")
                    | Sign Up
      .hero-body
        .container.has-text-centered
          .columns.is-vcentered
            .column.is-5
              figure.image.is-4by3
                img.promo-img(src='https://staticv2-4.rottentomatoes.com/static/images/icons/cf-lg.png', alt='Description')
            .column.is-6.is-offset-1
              h1.title.is-2
                | TOP 100 MOVIES OF ALL TIME
              a.button.is-large.is-danger(href="/movies/")
                | View Movies
                  

      .hero-foot
        .container
          .tabs.is-centered
            ul
              li
                a(href='http://bulma.io') Made by TEAM 9
              li
                a Copyright 2017 Rotten Tomatoes
              li
                a(href='http://unsplash.com') Images via unsplash
    script(type="text/javascript", src="/javascripts/jquery-min.js")
    script(type="text/javascript", src="/javascripts/main.js")
    script(type="text/javascript", src="/javascripts/bulma.js")